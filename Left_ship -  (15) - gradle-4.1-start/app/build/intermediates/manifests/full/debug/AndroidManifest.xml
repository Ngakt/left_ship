<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.huoda.left_ship"
    android:versionCode="3"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_top1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_top1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher" >
        <activity
            android:name="com.example.huoda.left_ship.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.huoda.left_ship.Connect"
            android:label="@string/title_activity_connect"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.huoda.left_ship.LoginActivity" />
        <activity android:name="com.example.huoda.left_ship.StartActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.huoda.left_ship.DateActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.huoda.left_ship.AddNoteActivity" />
    </application>

</manifest>